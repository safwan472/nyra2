<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Payment - Paynet</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/paynet.css">
    <style>
        .input-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .input-icon {
            display: inline-block;
            margin-bottom: 20px;
            animation: fadeIn 0.5s ease-out;
        }

        .input-title {
            font-size: 26px;
            font-weight: 700;
            color: #202124;
            margin-bottom: 8px;
        }

        .input-subtitle {
            font-size: 14px;
            color: #5f6368;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            text-align: left;
            font-size: 14px;
            font-weight: 500;
            color: #202124;
            margin-bottom: 8px;
        }

        .form-group input {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            color: #202124;
            transition: all 0.3s ease;
            font-family: 'Courier New', monospace;
            text-transform: uppercase;
        }

        .form-group input:focus {
            outline: none;
            border-color: #1A73E8;
            box-shadow: 0 0 0 3px rgba(26, 115, 232, 0.1);
        }

        .input-hint {
            font-size: 12px;
            color: #9aa0a6;
            margin-top: 6px;
            text-align: left;
        }

        .verify-btn {
            width: 100%;
            background: linear-gradient(135deg, #1A73E8 0%, #3B5FCC 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 16px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(26, 115, 232, 0.3);
        }

        .verify-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(26, 115, 232, 0.4);
        }

        .verify-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .error-message {
            background: #FEE;
            border: 1px solid #EA4335;
            border-radius: 8px;
            padding: 12px 16px;
            margin-top: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: shake 0.5s;
        }

        .error-message span {
            color: #EA4335;
            font-size: 14px;
            font-weight: 500;
        }

        @keyframes shake {

            0%,
            100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        .loading {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
    </style>
</head>

<body>
    <div class="payment-container">
        <!-- Paynet Logo -->
        <div class="logo-section">
            <div class="paynet-logo">
                <svg width="60" height="60" viewBox="0 0 60 60">
                    <defs>
                        <linearGradient id="shield-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:#1A73E8" />
                            <stop offset="100%" style="stop-color:#3B5FCC" />
                        </linearGradient>
                    </defs>
                    <path d="M30 5 L50 15 L50 30 C50 42 30 55 30 55 C30 55 10 42 10 30 L10 15 Z"
                        fill="url(#shield-gradient)" />
                    <path d="M25 30 L28 33 L36 23" stroke="white" stroke-width="3" fill="none" stroke-linecap="round"
                        stroke-linejoin="round" />
                </svg>
            </div>
            <h1 class="brand-name">Paynet</h1>
            <p class="tagline">Secure Payment Verification</p>
        </div>

        <!-- Payment ID Input Section -->
        <div class="input-section">
            <div class="input-icon">
                <svg width="60" height="60" viewBox="0 0 60 60">
                    <circle cx="30" cy="30" r="28" fill="#E8F0FE" />
                    <rect x="15" y="20" width="30" height="20" rx="3" stroke="#1A73E8" stroke-width="2.5" fill="none" />
                    <path d="M25 20 L25 17 C25 14.5 27 12 30 12 C33 12 35 14.5 35 17 L35 20" stroke="#1A73E8"
                        stroke-width="2.5" fill="none" />
                    <circle cx="30" cy="30" r="2.5" fill="#1A73E8" />
                </svg>
            </div>
            <h2 class="input-title">Verify Your Payment</h2>
            <p class="input-subtitle">Enter your payment verification ID to check transaction status</p>
        </div>

        <!-- Input Form -->
        <form id="paymentForm" onsubmit="verifyPayment(event)">
            <div class="form-group">
                <label for="paymentId">Payment ID</label>
                <input type="text" id="paymentId" name="paymentId" placeholder="Enter Payment ID" required
                    autocomplete="off" maxlength="12">
                <p class="input-hint">Example: PAY123ABC456</p>
            </div>

            <button type="submit" class="verify-btn" id="verifyBtn">
                <svg width="20" height="20" viewBox="0 0 20 20">
                    <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2" fill="none" />
                    <path d="M6 10 L9 13 L14 7" stroke="currentColor" stroke-width="2" fill="none" />
                </svg>
                <span id="btnText">Verify Payment</span>
            </button>
        </form>

        <!-- Error Message -->
        <div id="errorMessage" class="error-message" style="display: none;">
            <svg width="20" height="20" viewBox="0 0 20 20">
                <circle cx="10" cy="10" r="9" fill="#EA4335" />
                <path d="M7 7 L13 13 M13 7 L7 13" stroke="white" stroke-width="2" />
            </svg>
            <span id="errorText">Invalid Payment ID. Please check and try again.</span>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p class="powered-by">Secured by <strong>Paynet</strong></p>
            <p class="disclaimer">Trusted payment verification service</p>
        </div>
    </div>

    <script>
        async function verifyPayment(event) {
            event.preventDefault();

            const paymentId = document.getElementById('paymentId').value.toUpperCase().trim();
            const btn = document.getElementById('verifyBtn');
            const btnText = document.getElementById('btnText');
            const errorDiv = document.getElementById('errorMessage');

            // Hide error
            errorDiv.style.display = 'none';

            // Show loading
            btn.disabled = true;
            btnText.innerHTML = '<div class="loading"></div> Verifying...';

            try {
                // Send to server to validate
                const response = await fetch('/validate-payment-id', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ paymentId: paymentId })
                });

                const data = await response.json();

                if (data.valid) {
                    // Store payment ID in session
                    sessionStorage.setItem('paymentId', paymentId);

                    // Redirect to verification page
                    window.location.href = '/verify?id=' + paymentId;
                } else {
                    // Show error
                    errorDiv.style.display = 'flex';
                    document.getElementById('errorText').textContent =
                        data.message || 'Invalid Payment ID. Please check and try again.';

                    // Reset button
                    btn.disabled = false;
                    btnText.textContent = 'Verify Payment';
                }
            } catch (error) {
                console.error('Verification error:', error);
                errorDiv.style.display = 'flex';
                document.getElementById('errorText').textContent =
                    'Connection error. Please try again.';

                // Reset button
                btn.disabled = false;
                btnText.textContent = 'Verify Payment';
            }
        }
    </script>
</body>

</html>